<!-- BEGIN: Header-->
<div class="content-overlay"></div>
<div class="header-navbar-shadow"></div>
<nav class="header-navbar navbar-expand-lg navbar navbar-with-menu floating-nav navbar-light navbar-shadow">
    <div class="navbar-wrapper">
        <div class="navbar-container content">
            <div class="navbar-collapse" id="navbar-mobile">
                <div class="mr-auto float-left bookmark-wrapper d-flex align-items-center">
                    <ul class="nav navbar-nav">
                        <li class="nav-item mobile-menu d-xl-none mr-auto pr-1">
                            <a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#">
                                <i class="ficon feather icon-menu"></i>
                            </a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            {% if website is defined and id is defined and report.spider is defined %}
                                {{ render(controller('App\\Controller\\WidgetController:spiderStatus', {'website': website, 'id': id, 'spider': report.spider, 'refresh': true})) }}
                            {% endif %}
                        </li>
                    </ul>
                </div>
                <ul class="nav navbar-nav float-right mr-1">
                    <li class="nav-item d-none d-lg-block">
                        <a class="nav-link nav-link-expand">
                            <i class="ficon feather icon-maximize"></i>
                        </a>
                    </li>
                    <li class="dropdown dropdown-user nav-item">
                        <a class="dropdown-toggle nav-link dropdown-user-link" href="#" data-toggle="dropdown">
                            <div class="user-nav d-sm-flex d-none">
                                <span class="user-name text-bold-600">
                                    {% if app.user %}{{ app.user.username }}{% else %}Account{% endif %}
                                </span>
                                {% if app.user %}
                                    <span class="user-status text-success">Connected</span>
                                {% else %}
                                <span class="user-status text-danger">Disconnected</span>
                                {% endif %}
                            </div>
                            <span>
                                <img class="round" 
                                    src="https://ui-avatars.com/api/?background=0D8ABC&color=fff&name={% if app.user %}{{ app.user.username|slice(0,1) }}{% else %}U{% endif %}" 
                                    alt="avatar" height="40" width="40" />
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{ path('report') }}">
                                <i class="fa fa-files-o"></i> Reports
                            </a>
                            {% if app.user %}
                            {% else %}
                                <a class="dropdown-item" href="{{ path('app_login') }}">
                                    <i class="fa fa-user"></i> Login
                                </a>
                                <a class="dropdown-item" href="{{ path('app_register') }}">
                                    <i class="fa fa-user-plus"></i> Registration
                                </a>
                            {% endif %}
                            <div class="dropdown-divider"></div>
                            {% if app.user %}
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fa fa-power-off"></i> Logout
                                </a>
                            {% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<!-- END: Header-->