<div class="card">
    <div class="card-header border-bottom d-flex justify-content-between pb-1">
        <h4 class="card-title"><i class="fa fa-heartbeat"></i> Status Response</h4>
    </div>
    <div class="card-content">
        <div class="card-body">
            <div id="donut-chart" class="mx-auto"></div>
            {# <div id="http-codes-chart" class="" {% if httpCodes|length == 0 %}style="display:none;"{% endif %}></div> #}
            <hr>
            {% set series = {} %}
            {% set colors = {} %}
            {% set labels = {} %}
            {% for name, httpCode in httpCodes %}
                <div class="chart-info d-flex justify-content-between mb-1">
                    <div class="series-info d-flex align-items-center">
                        <i class="fa fa-circle-o text-bold-700 text-{{ httpCode.color }}"></i>
                        <span class="text-bold-600 ml-50">{{ name }}</span>
                    </div>
                    <div class="product-result">
                        <span>{{ httpCode.count }}</span>
                    </div>
                </div>
                {% set serie = httpCode.count * 100 / total %}
                {% set series = series|merge([serie|round]) %}
                {% set colors = colors|merge(['$' ~ httpCode.color]) %}
                {% set labels = labels|merge([name]) %}
            {% endfor %}
        </div>
    </div>
</div>

{% block javascripts %}
    {# Chart #}
    <script src="{{ asset('app-assets/vendors/js/charts/apexcharts.min.js') }}"></script>
    <script>
        var $primary = '#7367F0',
            $success = '#28C76F',
            $danger = '#EA5455',
            $warning = '#FF9F43',
            $info = '#00cfe8',
            $label_color_light = '#dae1e7';

        var themeColors = [$primary, $success, $danger, $warning, $info];
        var donutChartOptions = {
            chart: {
                type: 'donut',
                height: 200
            },
            colors: [{{ colors|join(',') }}],
            series: [{{ series|join(",") }}],
            labels: [{{ labels|join(",") }}],
            legend: {
                itemMargin: {
                    horizontal: 2
                },
            },
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        }
        var donutChart = new ApexCharts(
            document.querySelector("#donut-chart"),
            donutChartOptions
        );
        donutChart.render();
    </script>
{% endblock %}